{
	"name": "@dfinity/oisy-wallet-signer-demo",
	"version": "0.0.1",
	"private": true,
	"workspaces": [
		"src/relying_party_frontend",
		"src/wallet_frontend"
	],
	"scripts": {
		"dev:party": "npm run dev -w src/relying_party_frontend",
		"dev:wallet": "npm run dev -w src/wallet_frontend",
		"build:party": "npm run build -w src/relying_party_frontend",
		"build:wallet": "npm run build -w src/wallet_frontend",
		"build": "npm run build:party && npm run build:wallet",
		"preview": "npm run preview --workspaces --if-present",
		"test": "npm run test --workspaces --if-present",
		"test:integration": "npm run test:integration --workspaces --if-present",
		"test:unit": "npm run test:unit --workspaces --if-present",
		"check:party": "npm run check -w src/relying_party_frontend",
		"check:wallet": "npm run check -w src/wallet_frontend",
		"check": "npm run check:party && npm run check:wallet",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"generate": "scripts/did.sh && dfx generate && node scripts/did.update.types.mjs && node scripts/did.delete.types.mjs && npm run format",
		"deploy": "scripts/deploy.sh"
	},
	"devDependencies": {
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-static": "^3.0.2",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@types/eslint": "^8.56.0",
		"@types/node": "^20.14.11",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0-next.4",
		"postcss": "^8.4.39",
		"prettier": "^3.3.3",
		"prettier-plugin-organize-imports": "^4.0.0",
		"prettier-plugin-svelte": "^3.2.6",
		"sass": "^1.77.8",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.8.4",
		"tailwindcss": "^3.4.6",
		"tslib": "^2.6.3",
		"typescript": "^5.5.4",
		"vite": "^5.3.4",
		"vite-plugin-environment": "^1.1.3",
		"vitest": "^2.0.4"
	},
	"type": "module",
	"dependencies": {
		"@dfinity/agent": "^2.0.0",
		"@dfinity/auth-client": "^2.0.0",
		"@dfinity/candid": "^2.0.0",
		"@dfinity/ledger-icp": "^2.4.0-next-2024-08-28",
		"@dfinity/ledger-icrc": "^2.4.0-next-2024-08-28",
		"@dfinity/principal": "^2.0.0",
		"@dfinity/utils": "^2.4.0-next-2024-08-28",
		"buffer": "^6.0.3",
		"zod": "^3.23.7"
	}
}
